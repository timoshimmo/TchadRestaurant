<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imgItemImage"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imgBackTint"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/black"
            android:alpha="0.35" />

        <restaurant.org.tchadrestaurant.CustomTextLight
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txtItemDesc"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/white"
            android:layout_marginStart="15dp"
            android:ellipsize="end"
            android:lines="2"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:textSize="15sp" />

        <restaurant.org.tchadrestaurant.CustomTextRoman
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txtItemPrice"
            android:layout_alignStart="@+id/txtItemName"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_above="@+id/txtItemName"
            android:layout_marginBottom="10dp" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnSelectOrder"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/add_order"
            android:scaleType="fitCenter" />

        <restaurant.org.tchadrestaurant.CustomTextRoman
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txtItemName"
            android:layout_above="@+id/txtItemDesc"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/orderBody"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imgTintSelected"
                android:background="@android:color/black"
                android:alpha="0.6" />

            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/orderPicker"
                android:layout_centerInParent="true"
                android:divider="@color/theme_purple"
                android:showDividers="middle"
                android:background="@color/mid_gray" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnCloseOrderView"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/cancel"
                android:background="@android:color/transparent" />

            <ImageButton
                android:layout_width="42dp"
                android:layout_height="40dp"
                android:id="@+id/btnAddItem"
                android:background="@drawable/oval_background"
                android:src="@mipmap/shopping_cart"
                android:scaleType="fitCenter"
                android:layout_alignTop="@+id/btnCloseOrderView"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:padding="8dp" />

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>