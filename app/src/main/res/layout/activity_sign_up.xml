<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="restaurant.org.tchadrestaurant.SignUpActivity"
    android:background="@mipmap/restaurant_background">

    <ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone"
        android:layout_below="@+id/textTitle" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/signupForm"
        android:layout_below="@+id/textTitle"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_text_background"
            android:paddingLeft="10dp"
            android:layout_marginBottom="5dp">

            <restaurant.org.tchadrestaurant.CustomEditTextRoman
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/eTxtFName"
                android:background="@android:color/transparent"
                android:textSize="17sp"
                android:hint="First Name"
                android:textColor="@color/mid_gray"
                android:textColorHint="#ababab" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_text_background"
            android:paddingLeft="10dp"
            android:layout_marginBottom="5dp">

            <restaurant.org.tchadrestaurant.CustomEditTextRoman
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/eTxtLName"
                android:background="@android:color/transparent"
                android:textSize="17sp"
                android:hint="Last Name"
                android:textColor="@color/mid_gray"
                android:textColorHint="#ababab" />

    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_text_background"
            android:paddingLeft="10dp"
            android:layout_marginBottom="5dp">

            <restaurant.org.tchadrestaurant.CustomEditTextRoman
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:id="@+id/eTxtEmail"
                android:background="@android:color/transparent"
                android:textSize="17sp"
                android:hint="Email "
                android:inputType="textEmailAddress"
                android:textColor="@color/mid_gray"
                android:textColorHint="#ababab" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_text_background"
            android:paddingLeft="10dp"
            android:layout_marginBottom="5dp">

            <restaurant.org.tchadrestaurant.CustomEditTextRoman
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:id="@+id/eTxtPassword"
                android:background="@android:color/transparent"
                android:textSize="17sp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/mid_gray"
                android:textColorHint="#ababab" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_text_background"
            android:paddingLeft="10dp"
            android:layout_marginBottom="5dp">

            <restaurant.org.tchadrestaurant.CustomEditTextRoman
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:id="@+id/eTxtMobile"
                android:background="@android:color/transparent"
                android:textSize="17sp"
                android:hint="Mobile"
                android:textColor="@color/mid_gray"
                android:textColorHint="#ababab"
                android:inputType="phone" />


        </LinearLayout>



        <restaurant.org.tchadrestaurant.CustomButtonRoman
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:id="@+id/btnSignUp"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="@drawable/button_corners_background"
            android:textStyle="bold"
            android:textAllCaps="false"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sign Up"
        android:id="@+id/textTitle"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="27sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:id="@+id/btnBack"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:src="@mipmap/left_arrow"
        android:scaleType="fitCenter"
        android:layout_marginTop="5dp" />

</RelativeLayout>
