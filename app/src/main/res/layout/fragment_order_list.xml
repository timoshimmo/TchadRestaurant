<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:background="@android:color/white">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="35dp"
            android:paddingBottom="25dp">

            <ProgressBar android:id="@+id/order_progress" style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" android:visibility="gone"
                android:layout_below="@+id/textTitle" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ordView"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order"
                    android:id="@+id/orderTitle"
                    android:textColor="#424242"
                    android:textSize="23sp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:id="@+id/textView"
                    android:textSize="16sp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/theme_purple" />

                <restaurant.org.tchadrestaurant.CustomTextRoman
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Item"
                    android:id="@+id/txtFoodItems"
                    android:textColor="#424242"
                    android:layout_marginBottom="3dp"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp" />

                <restaurant.org.tchadrestaurant.CustomTextLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/txtFoodNameValue"
                    android:textSize="14sp"
                    android:textColor="#696969" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="8dp">

                    <restaurant.org.tchadrestaurant.CustomTextRoman
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity"
                        android:id="@+id/textView9"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="false"
                        android:layout_marginBottom="3dp"
                        android:textColor="#424242"
                        android:textSize="15sp" />

                    <restaurant.org.tchadrestaurant.CustomTextLight
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:id="@+id/txtFoodQuantity"
                        android:textSize="14sp"
                        android:textColor="#696969"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right">

                    <restaurant.org.tchadrestaurant.CustomTextRoman
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price (RM)"
                        android:id="@+id/textView10"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="3dp"
                        android:textColor="#424242"
                        android:textSize="15sp" />

                    <restaurant.org.tchadrestaurant.CustomTextLight
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:id="@+id/txtFoodPrice"
                        android:textSize="16sp"
                        android:textColor="#696969" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="#d7d7d7"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drinks"
                    android:id="@+id/textView3"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/theme_purple" />

                <restaurant.org.tchadrestaurant.CustomTextRoman
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drinks"
                    android:id="@+id/txtDrinkItems"
                    android:textColor="#424242"
                    android:layout_marginBottom="3dp"
                    android:textSize="15sp" />

                <restaurant.org.tchadrestaurant.CustomTextLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/txtDrinksValue"
                    android:textSize="14sp"
                    android:textColor="#696969" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="8dp">

                    <restaurant.org.tchadrestaurant.CustomTextRoman
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity"
                        android:id="@+id/textDrinkQuantityTitle"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="false"
                        android:layout_marginBottom="3dp"
                        android:textColor="#424242"
                        android:textSize="15sp" />

                    <restaurant.org.tchadrestaurant.CustomTextLight
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:id="@+id/txtDrinkQuantity"
                        android:textSize="14sp"
                        android:textColor="#696969"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right">

                    <restaurant.org.tchadrestaurant.CustomTextRoman
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price (RM)"
                        android:id="@+id/textDrinkPriceTitle"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="3dp"
                        android:textColor="#424242"
                        android:textSize="15sp" />

                    <restaurant.org.tchadrestaurant.CustomTextLight
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:id="@+id/txtDrinkPrice"
                        android:textSize="16sp"
                        android:textColor="#696969" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="#d7d7d7"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Table No."
                    android:id="@+id/textView4"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/theme_purple" />

                <Spinner
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:id="@+id/spnTableNo"
                    android:spinnerMode="dialog"
                    android:entries="@array/table_arrays"
                    android:prompt="@string/table_prompt" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="#d7d7d7"
                    android:layout_marginTop="15dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical|right">

                    <restaurant.org.tchadrestaurant.CustomTextRoman
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Price "
                        android:id="@+id/txtPriceTitle"
                        android:layout_marginBottom="5dp"
                        android:textColor="#424242"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:id="@+id/txtTotPrice"
                        android:textSize="21sp"
                        android:textColor="@color/theme_purple"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="45dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <restaurant.org.tchadrestaurant.CustomButtonRoman
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cancel"
                            android:id="@+id/btnOrderCancel"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/intro_button_background"
                            android:textColor="@drawable/intro_button_text_color"
                            android:textAllCaps="false"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <restaurant.org.tchadrestaurant.CustomButtonRoman
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Confirm"
                            android:id="@+id/btnOrderConfirm"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/intro_button_background"
                            android:textColor="@drawable/intro_button_text_color"
                            android:textAllCaps="false" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
