<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:paddingTop="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:id="@+id/textView"
                    android:textSize="16sp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/theme_purple" />

                <restaurant.org.tchadrestaurant.CustomTextRoman
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Items"
                    android:id="@+id/txtFoodItems"
                    android:textColor="#424242"
                    android:layout_marginBottom="3dp"
                    android:textSize="15sp" />

                <restaurant.org.tchadrestaurant.CustomTextLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/txtFoodNameValue"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_horizontal">

                        <restaurant.org.tchadrestaurant.CustomTextRoman
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantity"
                            android:id="@+id/textView9"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="false"
                            android:layout_marginBottom="3dp"
                            android:textColor="#424242"
                            android:textSize="15sp" />

                        <restaurant.org.tchadrestaurant.CustomTextLight
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:id="@+id/txtFoodQuantity"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center_horizontal">

                        <restaurant.org.tchadrestaurant.CustomTextRoman
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:id="@+id/textView10"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentTop="false"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="3dp"
                            android:textColor="#424242"
                            android:textSize="15sp" />

                        <restaurant.org.tchadrestaurant.CustomTextLight
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:id="@+id/txtFoodPrice"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drinks"
                    android:id="@+id/textView3"
                    android:textSize="16sp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/theme_purple" />

                <restaurant.org.tchadrestaurant.CustomTextRoman
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drinks"
                    android:id="@+id/txtDrinkItems"
                    android:textColor="#424242"
                    android:layout_marginBottom="3dp"
                    android:textSize="15sp" />

                <restaurant.org.tchadrestaurant.CustomTextLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/txtDrinksValue"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_horizontal">

                        <restaurant.org.tchadrestaurant.CustomTextRoman
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantity"
                            android:id="@+id/textDrinkQuantityTitle"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="false"
                            android:layout_marginBottom="3dp"
                            android:textColor="#424242"
                            android:textSize="15sp" />

                        <restaurant.org.tchadrestaurant.CustomTextLight
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:id="@+id/txtDrinkQuantity"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center_horizontal">

                        <restaurant.org.tchadrestaurant.CustomTextRoman
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:id="@+id/textDrinkPriceTitle"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentTop="false"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="3dp"
                            android:textColor="#424242"
                            android:textSize="15sp" />

                        <restaurant.org.tchadrestaurant.CustomTextLight
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:id="@+id/txtDrinkPrice"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Table No."
                    android:id="@+id/textView4"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/theme_purple" />

                <Spinner
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:id="@+id/spinner"
                    android:layout_gravity="center_horizontal"
                    android:spinnerMode="dialog" />

                <restaurant.org.tchadrestaurant.CustomButtonRoman
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Confirm"
                    android:id="@+id/btnOrderCancel"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/intro_button_background"
                    android:textColor="@drawable/intro_button_text_color"
                    android:textAllCaps="false"
                    android:layout_marginBottom="20dp" />

                <restaurant.org.tchadrestaurant.CustomButtonRoman
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/btnOrderConfirm"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/intro_button_background"
                    android:textColor="@drawable/intro_button_text_color"
                    android:textAllCaps="false"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>