<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="5dp" tools:context=".IntroActivityFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/OrdertitleContainer"
        android:layout_below="@+id/imgOrderIntro"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/food_order_title_string"
            android:id="@+id/txtTitle2"
            android:textColor="@color/theme_purple"
            android:textSize="@dimen/size_23"
            android:gravity="center" />

        <restaurant.org.tchadrestaurant.CustomTextRoman
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/food_order_subtitle_string"
            android:id="@+id/txtSubTitle2"
            android:textColor="@color/theme_purple"
            android:textSize="@dimen/size_15"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/intro_icon_width_height"
        android:layout_height="@dimen/intro_icon_width_height"
        android:id="@+id/imgOrderIntro"
        android:background="@android:color/transparent"
        android:src="@mipmap/food_order_intro_icon"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_30"
        android:layout_marginTop="40dp" />
</RelativeLayout>
